<div class="container">
<div class="jumbotron">
    <h2>CREATE A SIGHTING OF ANIMAL SPOTTED</h2>
       <form action="/animalSighting" method="post">
           <div class="form-group">
               <label for="animalName">Name</label>
               <input type="text" class="form-control" name="animalName" id="animalName" placeholder="Name of the Animal Spotted" required>
           </div>
          <div class="form-group row2">
             <label for="sightingLocation">Select Location Animal was spotted</label>
              <select id="sightingLocation" class="form-control" placeholder="Example: Zone A" required >
              <option>Zone A</option>
              <option>Zone B</option>
              <option>Zone C</option>
              <option>Zone D</option>
              </select>
          </div>

           <div class="form-group row2">
                       <label for="sightingAge">Select Age of Animal was spotted</label>
                        <select id="sightingAge" class="form-control" placeholder="Young" required >
                        <option>Young</option>
                        <option>Newborn</option>
                        <option>Old</option>
                        <option>Mature</option>
                        </select>
                    </div>

             <div class="form-group">
                      <label for="sightingHealth">What is the Health Of the Animal</label>
                      <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="sightingHealth" id="sightingHealth" value="common" onclick="animal(0)">
                            <label class="form-check-label" for="sightingHealth">Healthy</label>
                      </div>

                       <div class="form-check form-check-inline">
                                        <input class="form-check-input" type="radio" name="sightingHealth" id="sightingHealth" value="common" onclick="animal(0)">
                                        <label class="form-check-label" for="sightingHealth">Okay</label>
                                  </div>

                                   <div class="form-check form-check-inline">
                                                    <input class="form-check-input" type="radio" name="sightingHealth" id="sightingHealth" value="common" onclick="animal(0)">
                                                    <label class="form-check-label" for="sightingHealth">Pale</label>
                                              </div>
                                              </div>


           <div class="form-group">
                  <label for="sightingRangerName">Ranger Name</label>
                  <input type="text" class="form-control" name="sightingRangerName" id="sightingRangerName" placeholder="What is your Name" required>
           </div>

             <div class="form-group">
                             <label for="rangerTag">Ranger Badge</label>
                             <input type="number" class="form-control" name="rangerTag" id="rangerTag" placeholder="What is your Tag" required>
                      </div>



           <button type="submit" class="btn btn-info my-2 my-sm-0">Create Sighting</button>
